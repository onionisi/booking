              $("#picbtn").tap(function(){dialog1.open()});
              $("#picbig").tap(function(){dialog1.close()});
              $("#twxqbtn").tap(function(){
                  twxq_show();
                  return false;
              });
              $("#addcart").tap(function(){
                  add_cart('A200015864357', $('#buy_num').val());
                  try{
                      show_cartnum();
                  }catch (e){}
              });
              $("#buynow").tap(function(){
                  add_cart('A200015864357', $('#buy_num').val(), 1, true);
              });
