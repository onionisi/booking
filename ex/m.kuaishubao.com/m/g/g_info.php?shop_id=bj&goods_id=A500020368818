          function twxq_show(){
              $("#twxq").animate({
                  "height": $("#twxq2").height()
              }, 500, "linear", function() {
                         $("#twxq").height('');
                        window.scrollTo(0, $("#twxqbtn").offset().top, 500)
                      }
